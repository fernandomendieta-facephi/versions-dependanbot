{
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["apps/kargo/.*/kustomization\\.yaml$"],
      "matchStrings": [
        "name:\\s*kargo[\\s\\S]*?version:\\s*(?<currentValue>.*)"
      ],
      "depNameTemplate": "kargo",
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "oci://ghcr.io/akuity/kargo-charts"
    }
  ]
}
